		</c0>
		<c1>
			<sender>Geom0</sender>
			<senderPort>M_GEOM</senderPort>
			<receiver>SelSphere</receiver>
			<receiverPort>M_GEOM</receiverPort>
		</c1>
       <c2>
           <sender>SelBox</sender>
           <senderPort>M_GEOM</senderPort>
           <receiver>Geom1</receiver>
           <receiverPort>M_GEOM</receiverPort>
       </c2>
       <c3>
           <sender>SelSphere</sender>
           <senderPort>M_GEOM</senderPort>
           <receiver>Geom2</receiver>
           <receiverPort>M_GEOM</receiverPort>
